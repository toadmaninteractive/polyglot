<Window x:Class="Polyglot.ConflictResolutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Polyglot;component/Polyglot.ico"
        Title="Manual conflict resolution" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Height="560" 
        Width="689">
    <Grid>
        <Label 
            Content="Key:" 
            Name="txtKeyTip" 
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            Padding="0,5"
            VerticalAlignment="Top"/>
        <Label 
            Content="" 
            Name="txtKey" 
            HorizontalAlignment="Left" 
            Margin="47,10,0,0" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            FontWeight="Bold"
            VerticalAlignment="Top"/>

        <Label 
            Content="THEIRS >> Text:" 
            Name="txtTheirsText" 
            HorizontalAlignment="Left" 
            Margin="10,35,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"

            Padding="0,5"/>
        <TextBox 
            Name="txtbxTheirsText" 
            Height="48" 
            Margin="10,56,10,0" 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            Text="" 
            Background="PaleGreen"
            VerticalAlignment="Top">
        </TextBox>

        <Label 
            Content="THEIRS >> Locale original:" 
            Name="txtTheirsLocaleOriginal" 
            HorizontalAlignment="Left" 
            Margin="10,108,0,0" 
            VerticalAlignment="Top"
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            Padding="0,5"/>
        <TextBox 
            Name="txtbxTheirsLocaleOriginal" 
            Background="PaleGreen" 
            Height="48" 
            Margin="10,129,10,0" 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" />  

        <Label 
            Content="THEIRS >> Locale translation:" 
            Name="txtTheirsLocaleTranslation" 
            HorizontalAlignment="Left" 
            Margin="10,182,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            Padding="0,5"/>
        <TextBox 
            Name="txtbxTheirsLocaleTranslation" 
            Background="PaleGreen" 
            Height="48" 
            Margin="10,204,10,0" 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" />

        <Label 
            Content="MINE >> Locale original:" 
            Name="txtMineLocaleOriginal" 
            HorizontalAlignment="Left" 
            Margin="10,272,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            Padding="0,5"/>
        <TextBox 
            Name="txtbxMineLocaleOriginal" 
            Background="LemonChiffon" 
            Height="48" 
            Margin="10,293,10,0" 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" />

        <Label 
            Content="MINE >> Locale translation:" 
            Name="txtMineLocaleTranslation" 
            HorizontalAlignment="Left" 
            Margin="10,347,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Microsoft Sans Serif"
            FontSize="8.25 pt"
            Padding="0,5"/>
        <TextBox 
            Name="txtbxMineLocaleTranslation" 
            Background="LemonChiffon" 
            Height="48" 
            Margin="10,369,10,0" 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" />

        <CheckBox 
            Content="Remember my choice" 
            Name="chkRemember" 
            HorizontalAlignment="Left" 
            Margin="10,428,0,0" 
            VerticalAlignment="Top"
            FontFamily="Microsoft Sans Serif"
            FontSize="10 pt"
            Cursor="Hand"
            Width="158"/>

        <Button 
            Content="Use THEIRS" 
            Name="btnUseTheirs" 
            HorizontalAlignment="Left" 
            Margin="10,470,0,-3" 
            VerticalAlignment="Top" 
            Width="200" 
            Height="34"
            FontFamily="Trebuchet MS"
            FontSize="14 pt"
            Cursor="Hand"
            Click="btnUseTheirs_Click"/>
        <Button 
            Content="Use MINE" 
            Name="btnUseMine" 
            HorizontalAlignment="Left" 
            Margin="242,470,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Trebuchet MS"
            FontSize="14 pt"
            Cursor="Hand"
            Width="200" 
            Height="34"
            Click="btnUseMine_Click"/>
    </Grid>
</Window>

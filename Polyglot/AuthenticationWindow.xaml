<Window x:Class="Polyglot.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Polyglot;component/Polyglot.ico"
        Title="Settings"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="330" 
        Width="400" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Name="StyleLable">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif" />
            <Setter Property="FontSize" Value="10 pt" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif" />
            <Setter Property="FontSize" Value="10 pt" />
            <Setter Property="Height" Value="22" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <TabControl>
        <TabItem Header="CouchDB">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Server URL" />

                <TextBox 
            Grid.Row="0"
            Grid.Column="1"
            x:Name="txtbxServerUrl" 
            Text=""/>

                <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Login"  />

                <TextBox 
            Grid.Row="1"
            Grid.Column="1"
            x:Name="txtbxLogin" 
            Text=""/>

                <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="Password" />

                <PasswordBox 
            Grid.Row="2"
            Grid.Column="1"
            x:Name="txtbPassword" 
            VerticalContentAlignment="Center"
            VerticalAlignment="Center" 
            Height="22"
            Margin="10,0"/>

                <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="Database name"  />

                <Grid
            Grid.Row="3"
            Grid.Column="1"
            Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox 
                Height="22"
                IsEditable="True"
                x:Name="txtbxDataBaseName"
                SelectionChanged="DataBaseNameSelectionChangedHandler"
                DropDownClosed="DataBaseNameChangedHandler"/>
                    <Button
                Grid.Column="1"
                Width="22"
                Height="22"
                HorizontalAlignment="Right"
                Click="DataBaseNamesReload">
                        <Image Stretch="None" Source="Images/Fetch.png"  />
                    </Button>
                </Grid>

                <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Text="Locale"/>

                <Grid
            Grid.Row="4"
            Grid.Column="1"
            Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox 
                Height="22"
                x:Name="txtbxLocal"
                Margin="0,4"/>
                    <Button
                Grid.Column="1"
                Width="22"
                Height="22"
                HorizontalAlignment="Right" 
                Click="LocalesReload">
                        <Image Stretch="None" Source="Images/Fetch.png"  />
                    </Button>
                </Grid>

                <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Foreground="Red"
            HorizontalAlignment="Center"
            x:Name="txtErrors"/>

                <!--<TextBox 
            Grid.Row="5"
            Grid.Column="1"
            Name="txtbxFolder" 
            Text="" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Text="File folder"/>-->

                <StackPanel
                    Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right" Grid.ColumnSpan="2">

                <Button 
                    Content="Save" 
                    HorizontalAlignment="Right"  
                    VerticalAlignment="Bottom" 
                    Margin="10"
                    Width="90" 
                    Height="35"
                    FontFamily="Segoe UI"
                    FontSize="10 pt"
                    Cursor="Hand"
                    Click="CouchSaveHandlerClick"/>
                <Button 
                    Content="Cancel" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="10"
                    Width="90" 
                    Height="35"
                    FontFamily="Segoe UI"
                    FontSize="10 pt"
                    Cursor="Hand"
                    Click="Cancel_Click" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Update channel">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
		            Grid.Row="0"
		            Grid.Column="0"
		            Text="Update channel" 
		            VerticalAlignment="Center" />

                
                <ComboBox
                    Grid.Row="0"
		            Grid.Column="1"
                    x:Name="cbbxUpdateChannel"
                    Margin="10,4"
                    SelectedIndex="0">
                </ComboBox>

                <StackPanel
                    Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right" Grid.ColumnSpan="2">

                <Button 
                    Content="Save" 
                    HorizontalAlignment="Right"  
                    VerticalAlignment="Bottom" 
                    Margin="10"
                    Width="90" 
                    Height="35"
                    FontFamily="Segoe UI"
                    FontSize="10 pt"
                    Cursor="Hand"
                    Click="UpdateChannelHandlerClick"/>
                <Button 
                    Content="Cancel" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="10"
                    Width="90" 
                    Height="35"
                    FontFamily="Segoe UI"
                    FontSize="10 pt"
                    Cursor="Hand"
                    Click="Cancel_Click" />
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
    
</Window>
<Window x:Class="Polyglot.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Polyglot;component/Polyglot.ico"
        ResizeMode="NoResize" 
        Height="550" Width="430">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="2,5"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontSize" Value="10 pt"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10 pt"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10 pt"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label 
            Content="Type locale (ru, no, de, ...):" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBox Grid.Row="1"
            TextWrapping="Wrap" 
            Name="txtbxLocale"
            FontSize="14 pt"
            Text="" 
            FontWeight="Bold"
            Padding="0"
            Foreground="SeaGreen" />
        <CheckBox Grid.Row="2"
            Content="Fetch entries that are translated and up to date" 
            Name="chkFetchValid"
            IsChecked="True"/>
        <CheckBox Grid.Row="3"
            Content="Fetch entries that are translated but outdated" 
            Name="chkFetchInvalid"
            IsChecked="True"/>
        <CheckBox Grid.Row="4"
            Content="Fetch entries without translation" 
            Name="chkFetchUntranslated"
            IsChecked="True"/>

        <StackPanel Grid.Row="6"
                    Margin="0,5,0,0"
                    Name="groupCategoryFilderControl"
                    Orientation="Vertical">
            <Label Content="Include these categories only"/>
            <TextBox x:Name="txtbxCategoryFilter"
                 Height="90"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel 
            Grid.Row="7"
                Name="groupDocumentFilderControl"
            Orientation="Vertical">
            <Grid>
                <Label Content="Exclude these documents"/>
                <Label HorizontalAlignment="Right"
                       FontWeight="Bold"
                       x:Name="txtModeCaptionControl"/>
            </Grid>
            
            <TextBox x:Name="txtbxDocumentFilter"
                        Height="90"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                     TextChanged="FilterTextChangedHandler"/>
            <CheckBox 
                Margin="0,0,0,0"
                Content="Treat document names as regular expressions"
                Name="chkIsValueRegularExtension"
                Click="chkIsValueRegularExtensionClickHandler"
                IsChecked="False"/>
        </StackPanel>


        <Button Grid.Row="8"
            Content="OK" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom"
            FontFamily="Trebuchet MS"
            FontSize="12 pt"
            FontWeight="Bold"
            Width="160"
            Height="46"
            Cursor="Hand"
            Click="Ok_Click"/>
        <Button Grid.Row="8"
            Content="Cancel" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom"
            FontFamily="Trebuchet MS"
            FontSize="12 pt"
            Width="160"
            Height="46"
            Cursor="Hand"
            Click="Cancel_Click"/>
    </Grid>
</Window>